---
const { frontmatter } = Astro.props;
import LeftSide from "../components/LeftSide.astro";
import "../styles/markdown.css";
---

<html lang="en">
  <head>
    <title>{frontmatter.title}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="https://fav.farm/ðŸ‘¨ðŸ»â€ðŸ’»" />
  </head>
  <body>
    <aside>
      <LeftSide text_color_1="rgb(205, 167, 40)" text_color_2="white" />
    </aside>
    <main>
      <article>
        <div class="article-title">
          <h1>
            {frontmatter.title}
          </h1>
        </div>
        <div class="article-body">
          <!-- Markdown content is injected here -->
          <!-- ... -->
          <slot />
        </div>
      </article>
    </main>
  </body>
</html>

<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    text-decoration: none;
  }
  html {
    scroll-behavior: smooth;
    overscroll-behavior: none;
  }
  main {
    padding: 1em;
  }
  aside {
    position: sticky;
    font-size: 1rem;
    padding-left: 2em;
    padding-top: 5em;
    min-width: 240px;
    max-width: 240px;
    top: 0;
    background-color: oklch(20.8% 0.042 265.755);
    height: 100vh;
    /* Show aside only on larger screens */
    @media (width < 64rem) {
      display: none;
    }
  }
  body {
    display: flex;
    background-color: white;
    color: black;
    font-size: 1.1em;
  }
  .article-title {
    display: flex;
    justify-content: center;
    position: sticky;
    top: 0.5em;
    background-color: oklch(20.8% 0.042 265.755);
    border-radius: 2em;
    padding: 0.5em;
    margin-bottom: 2em;
  }
  .article-body {
    @media (width >= 64rem) {
      margin: 0em 2em 0em 1em;
    }
    text-wrap: pretty;
  }
  article {
    margin: 0em 2em;
    margin-bottom: 1em;
  }
</style>

<script>
  const anchorHeadings = document.querySelectorAll("h1, h2, h3, h4, h5, h6");
  [...anchorHeadings].forEach((heading) => {
    const anchor = document.createElement("a");
    anchor.className = "cursor-pointer";
    anchor.href = `#${heading.id}`;
    // Move heading's existing content into the anchor
    while (heading.firstChild) {
      anchor.appendChild(heading.firstChild);
    }
    // Append the anchor to the heading
    heading.appendChild(anchor);
  });
</script>
