---
import userIcon from "../assets/user-icon.png";
import pubsIcon from "../assets/publish-publishing-icon.png";
import softwareIcon from "../assets/programmer-icon.png";
import communityIcon from "../assets/community-icon.png";
import blogPostsIcon from "../assets/text-documents-line-icon.png";
import awarenessIcon from "../assets/head-idea-icon.png";
import LeftSide from "../components/LeftSide.astro";
import SearchBar from "../components/SearchBar.svelte";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Mohamed Tarek's Personal Website</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="https://fav.farm/ðŸ‘¨ðŸ»â€ðŸ’»" />
  </head>

  <body class="m-0 bg-[var(--primary_bg_color)]">
    <header class="site-header">
      <h1 class="mb-5 text-4xl font-bold text-white">Mohamed Tarek, PhD</h1>
      <p class="text-xl/8 text-white">
        Senior Product Engineer @ PumasAI Inc.
        <br />
        Research Affiliate @ University of Sydney
      </p>
    </header>
    <main class="flex my-5 ml-10 pr-0">
      <aside>
        <LeftSide text_color_1="text-blue-500" text_color_2="text-black" />
      </aside>
      <div class="block">
        <div class="ml-20">
          <SearchBar client:load />
        </div>
        <div class="grid grid-cols-3 gap-x-16 gap-y-8 ml-35 mb-10 mt-8">
          <!-- About -->
          <a href="/about" class="card">
            <img src={userIcon.src} alt="user icon" class="card-img" />
            <h2 class="card-head">About</h2>
            <p class="card-desc">Background, education and work.</p>
            <!-- <p class="card-button">Learn more</p> -->
          </a>
          <!-- Research and training -->
          <a href="/publications" class="card">
            <img src={pubsIcon.src} alt="research icon" class="card-img" />
            <h2 class="card-head">Research & Teaching</h2>
            <p class="card-desc">Publications and teaching material.</p>
            <!-- <p class="card-button">Learn more</p> -->
          </a>
          <!-- Software -->
          <a href="/software" class="card">
            <img
              src={softwareIcon.src}
              alt="programmer icon"
              class="card-img"
            />
            <h2 class="card-head">Software</h2>
            <p class="card-desc">Open source contributions.</p>
            <!-- <p class="card-button">Learn more</p> -->
          </a>
          <!-- Mentorship -->
          <a href="/mentorship" class="card">
            <img
              src={communityIcon.src}
              alt="community icon"
              class="card-img w-30"
            />
            <h2 class="card-head">Mentorship</h2>
            <p class="card-desc">People and projects I mentored.</p>
            <!-- <p class="card-button">Learn more</p> -->
          </a>
          <!-- Blog posts -->
          <a href="/blogposts" class="card">
            <img
              src={blogPostsIcon.src}
              alt="documents icon"
              class="card-img"
            />
            <h2 class="card-head">Blog posts</h2>
            <p class="card-desc">Blog posts I have written.</p>
            <!-- <p class="card-button">Learn more</p> -->
          </a>
          <!-- Awareness -->
          <a href="/awareness" class="card">
            <img
              src={awarenessIcon.src}
              alt="awareness icon"
              class="card-img"
            />
            <h2 class="card-head">Awareness</h2>
            <p class="card-desc">Raise your awareness.</p>
            <!-- <p class="card-button">Learn more</p> -->
          </a>
        </div>
      </div>
    </main>
  </body>
</html>

<style>
  @import "tailwindcss";

  html {
    scroll-behavior: smooth;
    overscroll-behavior: none;
  }

  :root {
    --primary_bg_color: var(--color-slate-100);
  }

  aside {
    @apply pr-5 pl-5 mt-3 max-w-50 min-w-50 sticky top-0 bg-[var(--primary_bg_color)] sm:px-4;
  }

  .card {
    @apply p-2 pt-5 border-1 border-slate-300 bg-blue-200 rounded-3xl container hover:scale-105 transition-shadow duration-300 hover:shadow-lg;
  }

  @utility card-img {
    @apply h-20 w-24 mx-auto;
  }

  .card-head {
    @apply mb-2 text-2xl font-bold text-slate-800 flex justify-center;
  }

  .card-desc {
    @apply mb-4 text-slate-800 flex justify-center;
  }

  /* .card-button {
    @apply mr-30 rounded-sm bg-gray-500 px-1 py-1 text-center text-sm font-bold text-white w-20;
  } */

  .site-header {
    @apply bg-black bg-[url("../assets/home-page-background.png")] bg-size-[auto_350px] bg-position-[right_bottom_-6rem] bg-no-repeat pt-5 pb-15 pl-90 text-slate-200 h-30;
  }
</style>
